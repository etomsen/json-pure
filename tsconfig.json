{
    "version": "0.0.1",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "es6"
        ]
    },
    "filesGlob": [
        ".src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": ["src/index.ts"]
}